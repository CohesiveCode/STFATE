@testgfortran
option test --compiler gfortran --flag "-O3 -march=native -mtune=native"

@wtestifort
option test --compiler ifort --flag "/O3 /Qxhost"

@ltestifort
options test 
options --compiler ifort
options --flag "-O3 -xhost"

@wtestifx
option test --compiler ifx --flag "/O3 /Qxhost"

@ltestifx
option test --compiler ifx --flag "-O3 -xhost"

@testnvfortran
option test --compiler nvfortran --flag "-Mpreprocess -fast"

@ifxrun
option run --compiler ifx

@fortbuild
options build
options --flag "-fPIC -ffree-line-length-none "
options --c-flag "-fPIC"
options --cxx-flag "-fPIC"

@gl_build
options build
options --flag " -fPIC -ffree-line-length-none"
options --c-flag "-fPIC"
options --cxx-flag "-fPIC"

@fortrun
option run --flag "-fPIC -ffree-line-length-none" --c-flag "-fPIC" --cxx-flag "-fPIC"

